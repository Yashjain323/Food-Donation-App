<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ReciepientRegistration">

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:alpha="1"
        android:gravity="center"
        android:text="Receipient Registration"
        android:textAlignment="center"
        android:textColor="@color/textcolor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="308dp"
        android:layout_height="137dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:foreground="@drawable/images"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="307dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="ExtraText">

        <EditText
            android:id="@+id/fName"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:hint="Name of Organisation"
            android:inputType="textMultiLine"
            android:textSize="20sp" />
        />

        <EditText
            android:id="@+id/emailIdR"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:hint="EmailID"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="232dp" />

        <EditText
            android:id="@+id/passwordR"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="251dp" />

        <EditText
            android:id="@+id/confirmpasswordField"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ConfirmPassword"
            android:inputType="textPassword"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="279dp" />

        <Button
            android:id="@+id/signupBtnR"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_margin="55dp"
            android:layout_marginTop="30dp"
            android:text="Sign Up"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="527dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbarR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>